{
  "name": "practice",
  "version": "1.0.0",
  "description": "A full-stack practice project",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",                     // Starts the backend server
    "client": "cd client && npm start",           // Starts the React client
    "dev": "concurrently \"npm run start\" \"npm run client\"", // Runs backend and frontend simultaneously
    "build": "cd client && npm run build"         // Builds the React app for production
  },
  "dependencies": {
    "axios": "^1.3.0",               // Shared between frontend and backend
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"         // Helps run client and server together
  },
